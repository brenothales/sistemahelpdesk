
<%= form_for [:admin, compromisso], remote: true do |f| %>
	  <%= f.check_box :completado, :class=>"left"  %> - 	
	  <%= f.submit "Update" %>
	  <%= compromisso.id %> <%= link_to("#{compromisso.nome}","#{}", :class => " pop_over ", :title => "Espercificação da Atividade #{compromisso.nome}", "data-placement"=> 'top',  "data-content" => 
	  	  	"Assunto: #{compromisso.nome} <br/>
	  	  	Número do : #{compromisso.chamado_id} <br/>
	  	  	#{time_ago_in_words(compromisso.created_at)} <br/>
			 #{if compromisso.completado == true 
			   content_tag(:span,:class => 'label label-success')   do      
  	  	  			   "Serviço Completo" if compromisso.completado == true 
  	  	  			   end 
  	  	  	else

			   content_tag(:span,:class => 'label label-important')   do      
  	  	  			   "Serviço Incompleto" if compromisso.completado == false 
  	  	  			   end 
  	  	  	end} <br>
          	Obervação: #{compromisso.observacao}").html_safe %>
		 <!-- time_ago_in_words(compromisso.created_at)%></small> | -->
		 <!-- time_ago_in_words(compromisso.updated_at)%></small> -->
	  <%= f.label :chamado, compromisso.chamado_id %>
  <%= content_tag(:span, :class => 'right') do  %>	  <%= link_to [:admin, compromisso], method: :delete, remote: true do %>
	  <i class="icon-trash"></i>
	  <% end -%>
  <% end -%>
<% end -%>



