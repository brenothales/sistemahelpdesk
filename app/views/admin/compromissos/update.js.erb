<% if @compromisso.completado? %>
  $('#edit_compromisso_<%= @compromisso.id %>').appendTo('#complete_compromissos');
  $.each( $('#edit_compromisso_<%= @compromisso.id %>  > .pop_over') , function(){
  	var c = $(this).attr('data-content');
  	c = c.replace('label-important','label-success');
  	c = c.replace(' Incompleto',' Completo');
  	$(this).attr('data-content',c);
  });
<% else %>
  $('#edit_compromisso_<%= @compromisso.id %>').appendTo('#incomplete_compromissos');
  $.each( $('#edit_compromisso_<%= @compromisso.id %>  > .pop_over') , function(){
  	var c = $(this).attr('data-content');
  	c = c.replace('label-success','label-important');
  	c = c.replace(' Completo',' Incompleto');
  	$(this).attr('data-content',c);
  	});
<% end %>
