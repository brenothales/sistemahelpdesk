<% @funcionarios.each do |funcionario| %>
  <tr>
    <td><%= funcionario.funcao %></td>
    <td><%= funcionario.ctps %></td>
    <td><%= funcionario.user.name %></td>
    <td><%= link_to 'Show', [:admin, funcionario] %></td>
    <td><%= link_to 'Edit', edit_admin_funcionario_path(funcionario) %></td>
    <td><%= link_to 'Destroy', [:admin, funcionario], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

