<div id="jCrumbs" class="breadCrumb module">
    <ul>
        
        <li><%= link_to  admin_funcionarios_path do %>
                <i class="icon-home"></i> Todos Funcionários 
            <% end -%>
        </li>
        <li>
            <%= link_to new_admin_cliente_path do %>
             <i class=" icon-plus"></i> Cadastrar Cliente 
            <% end -%>
        </li>
        <li>
            <%= link_to new_admin_user_path do %>
             <i class=" icon-plus"></i> Cadastrar Usuário 
            <% end -%>
        </li>
        <li>
            <%= link_to new_admin_funcionario_path(@funcionario) do %>
               <i class=" icon-plus"></i> Cadastrar Funcionário
            <% end -%>
        </li>
    </ul>
</div>    

  
<table class="table table-striped table-bordered dTableR" id="dt_d">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Função</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Ações</th>
      

      </tr>
  </thead>
  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td class='name'><%= funcionario.id %></td>
        <td class='name'> <%= link_to admin_funcionario_path(funcionario) do %>  <%= funcionario.user.name %> <i class="icon-share-alt"></i><% end -%> </td>
        <td class='name'> <%= funcionario.funcao %></td> 
        <td class='name'> <%= funcionario.user.email %></td> 
        <td class='name'> 
           <%if funcionario.contato_telefones.length > 0%>
          <% funcionario.contato_telefones.each do |telefone|%>
           <%= telefone.DDD %> <%= telefone.numero%> <%= "Ramal: #{telefone.ramal}" unless telefone.ramal.blank?%> <%= "(fax)" if telefone.fax%> <br/ >
           <%end%>
         <%end%> 
        </td> 
        <td class='situation'>
          <div class="btn-group dropup">
            <a class="btn btn-warning dropdown-toggle" data-toggle="dropdown" href="#"> Ações <span class="caret"></span> </a>
            <ul class="dropdown-menu">
              <li> <%= link_to [:admin, funcionario] do %>
                    <i class="icon-eye-open"></i> Detalhes
                <% end -%>
              </li>
              <li> <%= link_to edit_admin_funcionario_path(funcionario) do %>
                    <i class="icon-edit"></i> Editar
                   <% end -%>
              </li>
              <li><%= link_to [:admin, funcionario], :confirm => 'Você tem certeza?', :method => :delete do %>
                  <i class="icon-trash"></i> Deletar 
                <% end -%>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end -%>          
  </tbody>
</table>
  
