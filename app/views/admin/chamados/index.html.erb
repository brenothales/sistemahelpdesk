    <p>'Chamados não encotrados.'</p>
<% else %>
<table class="table table-bordered table-striped">
 <thead>
  <tr>
    <th class='name'>Assunto    <%= show_ordenation(:assunto) %></th>
    <th class='name'>Cliente    <%= show_ordenation(:assunto) %></th>
    <th class='name'>Produto    <%= show_ordenation(:assunto) %></th>
    <th class='name'>Solucionado<%= show_ordenation(:assunto) %></th>
    <th class='name'>Finalizado   <%= show_ordenation(:assunto) %></th>
