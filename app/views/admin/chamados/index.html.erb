    <th class='actions'>Ações</th>

  </tr>
 </thead>
<tbody>
<% @chamados.each do |chamado| %>
<% if can? :update, chamado %>
  <tr>
    <td class='name'><%= chamado.assunto %></td>
   <% if chamado.user %>
    <td class='name'><%= chamado.user.name %></td>
    <% end %>
    <td class='name'><%= chamado.produto_name %></td>
    <td class='name'>
        <% if chamado.solucionado == false  %>
            <span class="badge badge-important">Não</span>
        <% else %>
            <span class="badge badge-success">Sim</span>
        <% end -%>
    </td>
    <td class='name'>
        <% if chamado.solucionado == false  %>
            <span class="badge badge-important">chamado.valorGeral</span>
        <% end -%>
    </td>
    <td class='name'>
         <% if chamado.finalizaSolicitacao == false  %>
            <span class="badge badge-important">Não</span>
        <% else %>
            <span class="badge badge-success">Sim</span>
        <% end -%>
    <td class='name'><%= number_to_currency chamado.valorGeral %></td>
       <%= show_actions(chamado) %>
  </tr>
<% end %>
 </tbody>
