
<%= simple_form_for [:admin, @chamado], :html => { :class => 'form-horizontal' } do |f| %>
<div class="span12">
<div class="span5"></div>
  <div class="span2">
  
      <%=  f.input :cancelar,:as => :boolean, :input_html => {:class => 'uni_style', :id=>"cancelar", :onClick=>"HabiDsabi()"}, :label_html => {:class=>"inline"}, :label=> "Quero Cancelar" %>

      <%=  f.input :querofinalizar,:as => :boolean, :input_html => {:class => 'uni_style', :id=>"cancelar", :onClick=>"HabiDsabi()"}, :label_html => {:class=>"inline"}, :label=> "Quero finalizar" %>
  </div>
  <div class="span5"></div>
</div>

<div class="span12">
  <div class="span3"></div>
    <div class="span6">
      <%= confirmar_chamado(admin_chamados_path,{:label_name => "Enviar Aprovação do chamado de Nº #{ @chamado.id } "}) %>
    </div>
  <div class="span3"></div>
</div>
<% end -%>

<script>
        function HabiDsabi(){
  if(document.getElementById('cancelar').checked == true){
         document.getElementById('envia').disabled = ""
  }
  if(document.getElementById('cancelar').checked == false){
         document.getElementById('envia').disabled = "disabled"
  }
        }
</script>