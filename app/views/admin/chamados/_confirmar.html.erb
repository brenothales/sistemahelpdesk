
<%= simple_form_for [:admin, @chamado], :html => { :class => 'form-horizontal' } do |f| %>
<div class="span12">
<div class="span5"></div>
  <div class="span2">
      <%=  f.input :finalizaSolicitacao,:as => :boolean, :input_html => {:class => 'uni_style', :id=>"habi", :onClick=>"HabiDsabi()"}, :label_html => {:class=>"inline"}, :label=> "Finalizar Chamado" %>
  </div>
  <div class="span5"></div>
</div>

<div class="span12">
  <div class="span3"></div>
    <div class="span6">
      <%= confirmar_chamado(admin_chamados_path,{:label_name => "Quero Finalizar o chamado"}) %>
    </div>
  <div class="span3"></div>
</div>
<% end -%>

<script>
        function HabiDsabi(){
  if(document.getElementById('habi').checked == true){
         document.getElementById('envia').disabled = ""
  }
  if(document.getElementById('habi').checked == false){
         document.getElementById('envia').disabled = "disabled"
  }
        }
</script>