<%= div_for comment, :class => "comment" do %>
  
<%= content_tag_for :div, comment, :class => cycle(:info , :success) do %>
<% if comment.user.id == current_user.id %>
   <span class="label label-success"> <%= comment.user.name %></span><br/>
 <% else %>
 <span class="label label-info"> <%= comment.user.name %></span><br/>
 <% end -%><br>
 <div class="interacao">
	  <b> <%= comment.descricao %></b><br/>
 </div>
    <div class="">
    	Criado <%= time_ago_in_words comment.created_at %> | <%= I18n.localize(comment.created_at, :format => "%d/%m/%Y") %> </div><br/><br />
<% end -%>
<% end %>  